<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding new note"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleEt"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Content"
        android:id="@+id/textView3"
        android:layout_below="@+id/titleEt"
        android:layout_alignStart="@+id/titleEt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contentEt"
        android:lines="5"
        android:maxLines="5"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/titleEt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save note"
        android:id="@+id/saveNoteBtn"
        android:layout_below="@+id/contentEt"
        android:layout_alignEnd="@+id/contentEt" />

    <EditText
        android:id="@+id/linkEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_toStartOf="@+id/saveNoteBtn"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/notificationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/linkEt"
        android:text="Notification" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/linkEt"
        android:layout_alignBottom="@+id/linkEt"
        android:layout_alignParentEnd="true"
        android:text="X" />

    <Button
        android:id="@+id/locationBtn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_above="@+id/notificationBtn"
        android:layout_alignEnd="@+id/notificationBtn"
        android:layout_marginEnd="0dp"
        android:text="Location" />

    <Button
        android:id="@+id/pictureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/locationBtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:text="Picture" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="113dp"
        android:layout_alignTop="@+id/pictureBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-48dp"
        app:srcCompat="@mipmap/ic_launcher" />


</RelativeLayout>